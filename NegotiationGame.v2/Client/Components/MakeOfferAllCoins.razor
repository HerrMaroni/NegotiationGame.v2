@page "/MakeOfferAllCoins"

<MudPaper Elevation="0">
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="16" Class="mud-height-full">
        <MudStack Row="true" Justify="Justify.SpaceEvenly" Spacing="16" AlignItems="AlignItems.Center">
            <CascadingValue Value="@Coin1">
                <MakeOfferSingleCoin MaxCoins="10" @bind-Amount="_redCoinAmount" CoinColor="red"></MakeOfferSingleCoin>
            </CascadingValue>

            <CascadingValue Value="@Coin2">
                <MakeOfferSingleCoin MaxCoins="10" @bind-Amount="_blueCoinAmount" CoinColor="blue"></MakeOfferSingleCoin>
            </CascadingValue>
 
            <CascadingValue Value="@Coin3">
                <MakeOfferSingleCoin MaxCoins="10" @bind-Amount="_yellowCoinAmount" CoinColor="yellow"></MakeOfferSingleCoin>
            </CascadingValue>
        </MudStack>
        
        <MudStack Justify="Justify.SpaceEvenly" AlignItems="AlignItems.Center" Class="mud-width-full">
            <MudPaper Outlined="true" Class="mud-theme-transparent rounded border-4 mud-border-primary py-3 mud-width-full">
                <MudText Align="Align.Center" Typo="Typo.h5">Balance: 15 | 80</MudText>
            </MudPaper>
            <MudButton FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" Class="border-4">Submit Offer</MudButton>
        </MudStack>
        
    </MudStack>
</MudPaper>

@code {
        private const string Coin1 = "blue";
        private const string Coin2 = "red";
        private const string Coin3 = "yellow";
    
    private int _redCoinAmount = 10;
    private int _blueCoinAmount = 10;
    private int _yellowCoinAmount = 10;

    [Parameter]
    public int EnemyCoinsAmount { get; set; }

    [Parameter]
    public int PlayerCoinsAmount { get; set; }
}