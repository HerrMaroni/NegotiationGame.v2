@inherits LayoutComponentBase

<MudThemeProvider Theme="_negotiationGameTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="mud-height-full">
    <MudAppBar Dense="true" Elevation="0">
        <MudText Typo="Typo.h5">Negotiation Game</MudText>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent Class="mud-height-full">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    readonly MudTheme _negotiationGameTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Background = "#f3f2f1",
        },

        LayoutProperties = new LayoutProperties()
        {
            AppbarHeight = "48px"
        },
        Typography = new Typography()
        {
            Overline = new Overline()
            {
                FontFamily = new[] { "Roboto","Helvetica","Arial","sans-serif" },
                FontSize = ".75rem",
                FontWeight = 400,
                LineHeight = 1.2,
                LetterSpacing = ".08333em"
            }
        }
    };
}

